<div class="header">
<% if signed_in? %>
    <%= link_to "Главная", index_path%> |
    <%= link_to "Профиль", current_user %> |
    <%= link_to "Настройки", edit_user_path(current_user) %> |
      <% if current_user.admin? %>
      <%= link_to "Пользователи", users_path %> |
          <% end %>
    <%= link_to "Виход", signout_path, :method => :delete %>
<% else %>
    <%= link_to "Регистрация", signup_path %> |
    <%= link_to "Войти", signin_path %>
<% end %>
</div>